#:kivy 1.0.9
#: import utils kivy.utils

<Multiplayer>:
	
	FloatLayout:
		canvas.before:
			Rectangle:
				source: '../../img/back_img.jpeg'
				size: self.size
				pos: self.pos
		Button:
			pos_hint: {"x":.01, "top":.99}
			size_hint: [None, None]
			height: 40
			width: 40
			bold: True
			background_normal: '../../img/back.png'
			on_release:
				app.change_screen('home', 'down', 'poly')
		Button:
			pos_hint: {"x":.13, "top":.99}
			size_hint: [None, None]
			height: 40
			width: 40
			bold: True
			background_normal: '../../img/restore.png'
			on_release:
				app.reset_net('poly')
				app.execute_show_options("poly")
		BoxLayout:
			id: box
			orientation: "vertical"
			spacing:5
			size_hint: [None, None]
			width: 300
			height:300
			pos_hint: {'center_x':0.5, 'center_y':0.6}