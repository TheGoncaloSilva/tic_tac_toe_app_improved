		#	id: scoreboard
		#	size_hint: [0.38, 0.25]
		#	pos_hint: {'center_x':0.66, 'center_y':0.15}
		#	canvas.before:
		#		Color: 
		#			rgb: utils.get_color_from_hex('#fdcb01')
